<% content_for :navbar do %>
  <%= render 'shared/navbar' %>
<% end %>

<div class="banner">
  <div class="banner-content">
    <h1>Winning with you</h1>
  </div>
</div>


<div class="container text-center">
  <div class="row">
    <div class="col-xs-12 col-sm-4">
      <div class="services-card service-hoverable">
        <%=link_to (image_tag "suitcase_yellow.svg"), services_path(category_id: 2) %>
      </div>
    </div>
    <div class="col-xs-12 col-sm-4">
      <div class="services-card service-hoverable">
        <%=link_to (image_tag "real_estate_yellow.svg"), services_path(category_id: 1) %>
      </div>
    </div>
    <div class="col-xs-12 col-sm-4">
      <div class="services-card service-hoverable">
        <%=link_to (image_tag "will_small_yellow.svg"), services_path(category_id: 3) %>
      </div>
    </div>
  </div>
</div>


<div class="container">
  <div class="row">
    <% @feedbacks.each do |feedback|  %>
      <div class="col-xs-12 col-md-6 col-lg-3">
        <div class="feedback-card hoverable">
          <div class="card-up">
              <%= image_tag feedback.avatar.url(:thumb), class: "card-up-client" %>
          </div>
          <div class="card-content">
            <h5><%= feedback.client%></h5>
            <div class="divider-new"></div>
            <p>"<%=feedback.description%>"</p>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
