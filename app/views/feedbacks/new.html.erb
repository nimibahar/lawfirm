<% content_for :navbar do %>
  <%= render 'shared/gennavbar' %>
<% end %>

<br>

<div class="skinny_wrapper wrapper_padding">
  <%= form_for @feedback, url: feedbacks_path, html: { multipart: true } do |f| %>
    <%= f.label :client %><br>
    <%= f.text_field :client, required: true %>


    <br>

    <%= f.label :description %><br>
    <%= f.text_area :description, required: true %>

    <br>

    <%= f.label :avatar %> <br>
    <%= f.file_field :avatar %>

    <div class="hidden">
      <%= f.label :nickname %><br>
      <%= f.text_field :nickname, hint: 'leave this field blank' %>
    </div>

    <br>

    <%= f.submit 'Create', class: "button" %>

  <% end %>
</div>


